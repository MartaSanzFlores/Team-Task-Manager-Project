{% extends 'base.html.twig' %}

{% block title %}Create Project{% endblock %}

{% block body %}
<section id="create_project_page" class="container d-flex justify-content-center h-100 py-4">
    <div class="d-flex flex-column justify-content-center w-75 text-light bg-secondary m-auto p-4 rounded">
        <div class="mb-4 d-flex justify-content-between align-items-center">
            <h1>Create a New Project</h1>
            <a href="{{ path('app_dashboard') }}" class="btn primary">Back to Overview</a>
        </div>

        {{ form_start(form) }}
            {{ form_row(form.title, { 'attr': {'class': 'form-control mb-3'} }) }}
            {{ form_row(form.description, { 'attr': {'class': 'form-control mb-4'} }) }}
            {{ form_row(form.startDate, { 'attr': {'class': 'form-control mb-3 datepicker'} }) }}
            {{ form_row(form.endDate, { 'attr': {'class': 'form-control mb-3 datepicker'} }) }}
            {{ form_row(form.members, { 'attr': {'class': 'form-control mb-3'} }) }}

            <div class="d-flex justify-content-center align-items-center gap-4">
                <button type="submit" class="btn success mt-4">Save</button>
            </div>
        {{ form_end(form) }}
    </div>
</section>
{% endblock %}
