<!-- templates/partials/header.html.twig -->

<div class="menu-navbar d-flex gap-2">
    <h2 class="fs-5 text-light m-0">TeamTaskPro</h2>
    <button class="btn primary btn-navbar" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasWithBackdrop" aria-controls="offcanvasWithBackdrop"><span class="material-symbols-outlined">menu</span></button>
</div>


<div class="navbar offcanvas offcanvas-start" tabindex="-1" id="offcanvasWithBackdrop" aria-labelledby="offcanvasWithBackdropLabel">
    <div class="d-flex flex-column flex-shrink-0 bg-light h-100 w-100">
        <a href="{{ path('app_dashboard') }}" class="d-flex justify-content-center p-3 link-dark text-decoration-none" title="" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-original-title="Icon-only">
            <img src="https://img.icons8.com/pulsar-color/48/task-completed.png" alt="">
            <span class="visually-hidden">Icon-only</span>
        </a>
        <ul class="nav nav-pills nav-flush flex-column mb-auto text-center">
            <li class="nav-item">
                <a href="{{ path('app_dashboard') }}" class="nav-link py-3 border-bottom d-flex align-items-center justify-content-center
                {% if app.request.pathinfo == path('app_dashboard') %} active {% endif %}" 
                title="" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-original-title="Home">
                    <div class="d-flex align-items-center gap-2">
                        <span class="material-symbols-outlined">team_dashboard</span>
                        <p class="m-0">Dashboard</p>
                    </div>
                </a>
            </li>
            <li class="nav-item">
                <a href="{{ path('app_user_projects') }}" class="nav-link py-3 border-bottom d-flex align-items-center justify-content-center
                {% if app.request.pathinfo == path('app_user_projects') %} active {% endif %}" 
                title="" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-original-title="Projects">
                    <div class="d-flex align-items-center gap-2">
                        <span class="material-symbols-outlined">book_4_spark</span>
                        <p class="m-0">My Projects</p>
                    </div>
                </a>
            </li>
        </ul>
        <div id="user" class="dropdown p-4">
            <a href="#" class="d-flex align-items-center justify-content-start text-decoration-none dropdown-toggle" id="dropdownUser" data-bs-toggle="dropdown" aria-expanded="false">
                <img 
                src="{{ asset(app.user.profileImage ? 'uploads/' ~ app.user.profileImage : 'images/default-avatar.png') }}" 
                data-bs-toggle="tooltip" 
                data-bs-placement="top" 
                title="{{ member.name }}"
                class="avatar me-2" 
                width="45" height="45">
                <span class="d-none d-sm-inline mx-1">{{ app.user.name }}</span>
            </a>
            <ul class="dropdown-menu text-small shadow" aria-labelledby="dropdownUser">
                <li><a class="dropdown-item" href="{{ path('app_user_profile') }}">Profile</a></li>
                <li>
                    <hr class="dropdown-divider">
                </li>
                <li><a class="dropdown-item" href="{{ path('app_logout') }}">Logout</a></li>
            </ul>
        </div>
    </div>
</div>
