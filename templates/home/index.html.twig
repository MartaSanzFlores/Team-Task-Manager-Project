{% extends 'base.html.twig' %}

{% block title %}Projects{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>PROJECTS</h1>
        {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('create_project') }}" class="btn primary">Create Project</a>
        {% endif %}
    </div>

    {% set today = "now"|date("Y-m-d") %}

    {% if projects %}
        <div class="row">
            {% set categories = {
                'Current Projects': (projects|filter(p => p.startDate|date("Y-m-d") <= today and p.endDate|date("Y-m-d") >= today)),
                'Future Projects': (projects|filter(p => p.startDate|date("Y-m-d") > today)),
                'Finished Projects': (projects|filter(p => p.endDate|date("Y-m-d") < today))
            } %}

            {% for category, filteredProjects in categories %}
                <div class="col-12 mb-4">
                    <h3 class="mb-4">{{ category }}</h3>
                    <div class="list-group">
                        {% if filteredProjects is empty %}
                            <p class="warning">No projects available.</p>
                        {% else %}
                            {% for project in filteredProjects %}
                                <a href="{{ path('project', {'id': project.id}) }}" class="list-group-item list-group-item-action">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <p class="m-0 p-0">{{ project.title }}</p>
                                        <span class="material-symbols-outlined">
                                            {% if app.user.id == project.owner.id or project.members|filter(member => member.id == app.user.id)|length > 0 %}
                                                lock_open
                                            {% else %}
                                                lock
                                            {% endif %}
                                        </span>
                                    </div>
                                </a>
                            {% endfor %}
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <p class="warning">No projects available.</p>
    {% endif %}
</div>
{% endblock %}


