{% extends 'base.html.twig' %}

{% block title %}Projects{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>PROJECTS</h1>
        {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('create_project') }}" class="btn btn-outline-info">Create Project</a>
        {% endif %}
    </div>

    {% set today = "now"|date("Y-m-d") %}

    {% if projects %}
        <div class="row">
            <!-- Section des projets en cours -->
            <div class="col-12 mb-4">
                <h3 class="mb-4">Current Projects</h3>
                <div class="list-group">
                    {% for project in projects %}
                        {% if project.startDate|date("Y-m-d") <= today and project.endDate|date("Y-m-d") >= today %}
                            <a href="#" class="list-group-item list-group-item-action">
                                <div class="d-flex justify-content-between align-items-center">
                                    <p class="m-0 p-0">{{ project.title }}</p>
                                    <span class="material-symbols-outlined">
                                        {% if app.user.id == project.owner.id or project.members|filter(member => member.id == app.user.id)|length > 0 %}
                                        lock_open
                                        {% else %}
                                        lock
                                        {% endif %}
                                    </span>
                                </div>
                                
                                
                            </a>
                            {% else %}
                            <p class="alert alert-warning">No projects available.</p>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>

            <!-- Section des projets futurs -->
            <div class="col-12 mb-4">
                <h3 class="mb-4">Future Projects</h3>
                <div class="list-group">
                    {% for project in projects %}
                        {% if project.startDate|date("Y-m-d") > today %}
                            <a href="#" class="list-group-item list-group-item-action">
                                {{ project.title }}
                                <span class="material-symbols-outlined">
                                    {% if app.user.id == project.owner.id or project.members|filter(member => member.id == app.user.id)|length > 0 %}
                                    lock_open
                                    {% else %}
                                    lock
                                    {% endif %}
                                </span>
                            </a>
                            {% else %}
                            <p class="alert alert-warning">No projects available.</p>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>

            <!-- Section des projets terminÃ©s -->
            <div class="col-12 mb-4">
                <h3 class="mb-4">Finished Projects</h3>
                <div class="list-group">
                    {% for project in projects %}
                        {% if project.endDate|date("Y-m-d") < today %}
                            <a href="#" class="list-group-item list-group-item-action">
                                {{ project.title }}
                                <span class="material-symbols-outlined">
                                    {% if app.user.id == project.owner.id or project.members|filter(member => member.id == app.user.id)|length > 0 %}
                                    lock_open
                                    {% else %}
                                    lock
                                    {% endif %}
                                </span>
                            </a>
                            {% else %}
                            <p class="alert alert-warning">No projects available.</p>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
    {% else %}
        <p class="alert alert-warning">No projects available.</p>
    {% endif %}
</div>
{% endblock %}

