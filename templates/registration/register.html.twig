{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<section id="register_page" class="container h-100 d-flex justify-content-center">

    <div class="row align-items-center gx-5">

        <div class="col-5">
            <img class="w-100 mb-4" src="{{ asset('images/vector.png') }}" alt="Mon Vector">
            <h2 class="text-center text-light">TeamTaskPro</h2>
        </div>

        <div class="col-6 offset-1 d-flex flex-column justify-content-center text-light bg-secondary p-4 rounded">
            <h1 class="mb-4">Register</h1>

            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.name, { 'attr': {'class': 'form-control mb-3'} }) }}
                {{ form_row(registrationForm.email, { 'attr': {'class': 'form-control mb-3'} }) }}
                {{ form_row(registrationForm.plainPassword, { 'label': 'Password', 'attr': {'class': 'form-control mb-3'} }) }}
                {{ form_row(registrationForm.agreeTerms, { 'attr': {'class': 'form-check-input'} }) }}

                <div class="d-flex flex-column justify-content-center align-items-center gap-4">
                    <button type="submit" class="btn primary text-right">Register</button>
                    <p class="m-0 p-0">Do you have an account? Login <a class="link" href="{{ path('app_login') }}">here</a></p>
                </div>
                
            {{ form_end(registrationForm) }}

        </div>

    </div>
    
</section>
    
{% endblock %}

