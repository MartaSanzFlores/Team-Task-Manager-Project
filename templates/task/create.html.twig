{% extends 'base.html.twig' %}

{% block title %}Create Task{% endblock %}

{% block body %}
<section id="create_task_page" class="container d-flex justify-content-center h-100">
    <div class="d-flex flex-column justify-content-center w-75 text-light bg-secondary m-auto p-4 rounded">
        <div class="mb-4 d-flex justify-content-between align-items-center">
            <h1>Create a New Task</h1>
            <a href="{{ path('app_dashboard') }}" class="btn primary">Back to Overview</a>
        </div>

        <!-- Utilisation de form_start et form_end de Symfony -->
        {{ form_start(form) }}

            <!-- Affichage du champ 'title' -->
            {{ form_row(form.title, { 'attr': {'class': 'form-control mb-3'} }) }}

            {{ form_row(form.description, { 'attr': {'class': 'description form-control mb-3'} }) }}

            <div class="d-flex justify-content-center align-items-center gap-4">
                <button type="submit" class="btn success mt-4">Save</button>
            </div>

        {{ form_end(form) }} <!-- Fermeture du formulaire géré par Symfony -->
    </div>
</section>
{% endblock %}
